#include <stdio.h>

struct Student {
    int roll;
    char name[20];
    float m1, m2, m3, total, avg;
};

int main() {
    int n, i;
    printf("Enter number of students: ");
    scanf("%d", &n);

    struct Student s[n];

    for (i = 0; i < n; i++) {
        printf("\nRoll No: ");
        scanf("%d", &s[i].roll);
        printf("Name: ");
        scanf("%s", s[i].name);
        printf("Enter 3 marks: ");
        scanf("%f%f%f", &s[i].m1, &s[i].m2, &s[i].m3);
        s[i].total = s[i].m1 + s[i].m2 + s[i].m3;
        s[i].avg = s[i].total / 3;
    }

    printf("\nRoll\tName\tTotal\tAverage\n");
    for (i = 0; i < n; i++)
        printf("%d\t%s\t%.2f\t%.2f\n", s[i].roll, s[i].name, s[i].total, s[i].avg);

    return 0;
}
